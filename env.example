# Core settings
HOSTNAME=pi-at-home
DOMAIN=
USERNAME=pi
EMAIL=
SSH_PUBLIC_KEY="ssh-ed25519 AAAA...public_key_here..."
TIMEZONE=Asia/Tokyo
LOCALE=en_US.UTF-8

# Target device (auto-detected if empty)
NVME_DEVICE=/dev/nvme0n1

# Ubuntu image source (auto-selects latest LTS if empty)
UBUNTU_VERSION=24.04.3
UBUNTU_IMG_URL=https://cdimage.ubuntu.com/releases/${UBUNTU_VERSION}/release/ubuntu-${UBUNTU_VERSION}-preinstalled-server-arm64+raspi.img.xz

# GitLab & monitoring
GITLAB_DOMAIN=gitlab.${DOMAIN}
GITLAB_EXTERNAL_URL=https://${GITLAB_DOMAIN}
GITLAB_IMAGE=gitlab/gitlab-ce:latest
GITLAB_ROOT_PASSWORD=change_this_secure_password
# GITLAB_RUNNER_TOKEN=  # Generated by GitLab after setup - add manually

PROM_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=change_this_secure_password

# SMTP (notifications) - Gmail configuration
SMTP_ADDRESS=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_gmail@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_DOMAIN=gmail.com
SMTP_FROM=your_gmail@gmail.com
SMTP_DISPLAY_NAME=GitLab Pi
SMTP_REPLY_TO=noreply@${DOMAIN}
SMTP_AUTH=login              # plain|login|cram_md5
SMTP_STARTTLS=true           # true|false
SMTP_TLS=false               # true|false
SMTP_SSL_VERIFY_MODE=peer    # none|peer

# Backups
# Cloud Provider Selection
USE_GCP=true  # Use GCP instead of AWS (better Always Free Tier)

# GCP Configuration (if USE_GCP=true)
GCP_PROJECT_ID=
GCP_REGION=us-central1
GOOGLE_APPLICATION_CREDENTIALS=/path/to/gcp-key.json

# AWS Configuration (if USE_GCP=false)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Cloud Backup (works with both GCP and AWS)
BACKUP_DIR=/srv/backups
BACKUP_BUCKET=  # Format: gs://bucket-name (GCP) or s3://bucket-name (AWS)
BACKUP_RETENTION_DAYS=7

# Cloudflare Tunnel
CLOUDFLARE_ACCOUNT_ID=
CLOUDFLARE_TUNNEL_NAME=gitlab-pi
CLOUDFLARE_TUNNEL_TOKEN=

# GitLab Cloud Mirroring
GITLAB_CLOUD_TOKEN=
DR_WEBHOOK_URL=

# Ad Blocker (Pi-hole)
PIHOLE_WEB_PASSWORD=change_this_secure_password

# Terraform variables
CLOUDFLARE_API_TOKEN=  # Cloudflare API token for Terraform
ALERT_EMAIL=  # Email for Terraform alerts
