# GCP Terraform Variables Example
# Copy to terraform.tfvars and fill in your values

# Cloud Provider Selection
use_gcp = true  # Use GCP instead of AWS (better **Always** Free Tier)

# Cloudflare Configuration
cloudflare_api_token = "your_cloudflare_api_token_here"
domain = "yourdomain.com"
cloudflare_tunnel_name = "gitlab-pi"
pi5_ip = ""  # Leave empty for tunnel-based setup
grafana_port = 3000

# GCP Configuration
gcp_project_id = "your-gcp-project-id"
gcp_region = "us-central1"  # Use us-central1 for best Always Free Tier coverage

# Notification Settings
alert_email = "your-email@yourdomain.com"
dr_webhook_url = "https://your-external-webhook-url.com/webhook"  # Optional

# Backup Settings
backup_retention_days = 30

# Environment
environment = "prod"
tags = {
  Project     = "gitlab-pi"
  ManagedBy   = "terraform"
  Environment = "prod"
  CloudProvider = "gcp"
}
