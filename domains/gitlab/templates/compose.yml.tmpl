services:
  gitlab:
    image: ${GITLAB_IMAGE}
    container_name: gitlab
    hostname: ${GITLAB_DOMAIN}
    restart: always
    shm_size: "256m"
    stop_grace_period: 1m
    ports:
      - "${PORT_GITLAB_HTTP}:80"
      - "${PORT_GITLAB_HTTPS}:443"
      - "${PORT_GITLAB_SSH}:22"
    environment:
      GITLAB_DOMAIN: ${GITLAB_DOMAIN}
      GITLAB_EXTERNAL_URL: ${GITLAB_EXTERNAL_URL}
      GITLAB_ROOT_PASSWORD: ${GITLAB_ROOT_PASSWORD}
      DOMAIN: ${DOMAIN}
      SMTP_ADDRESS: ${SMTP_ADDRESS}
      SMTP_PORT: ${SMTP_PORT}
      SMTP_USERNAME: ${SMTP_USERNAME}
      SMTP_PASSWORD: ${SMTP_PASSWORD}
      SMTP_DOMAIN: ${SMTP_DOMAIN}
      SMTP_FROM: ${SMTP_FROM}
      SMTP_DISPLAY_NAME: ${SMTP_DISPLAY_NAME}
      SMTP_REPLY_TO: ${SMTP_REPLY_TO}
      SMTP_AUTH: ${SMTP_AUTH}
      SMTP_STARTTLS: ${SMTP_STARTTLS}
      SMTP_TLS: ${SMTP_TLS}
      SMTP_SSL_VERIFY_MODE: ${SMTP_SSL_VERIFY_MODE}
      GITLAB_OMNIBUS_CONFIG: |
        gitlab_workhorse['prometheus_listen_addr'] = "0.0.0.0:${PORT_GITLAB_METRICS}"
    volumes:
      - /srv/gitlab/config:/etc/gitlab
      - /srv/gitlab/logs:/var/log/gitlab
      - /srv/gitlab/data:/var/opt/gitlab
      - /srv/gitlab/ssl:/etc/gitlab/ssl:ro
      - ./gitlab.rb:/etc/gitlab/gitlab.rb:ro
    healthcheck:
      test: ["CMD-SHELL", "curl -fsSk https://localhost/-/health || exit 1"]
      interval: 30s
      timeout: 10s
      retries: 10
      start_period: 180s
    networks:
      - gitlab-network

networks:
  gitlab-network:
    driver: bridge
    internal: true

