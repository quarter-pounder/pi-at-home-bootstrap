            {
              "type": "special",
              "options": {
                "match": "null",
                "result": { "text": "No data", "color": "#a5a5a5" }
              }
            }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "value": null, "color": "#a5a5a5" },
