{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": { "type": "grafana", "uid": "grafana" },
        "enable": true,
        "hide": true,
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 0,
  "title": "Runners Overview",
  "tags": ["runners", "ci-cd", "pi-forge"],
  "timezone": "browser",
  "time": { "from": "now-6h", "to": "now" },
  "refresh": "30s",
  "schemaVersion": 38,
  "style": "dark",
  "uid": "pi-runners-overview",
  "version": 2,
  "panels": [
    {
      "type": "row",
      "title": "Summary",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 }
    },
    {
      "type": "table",
      "title": "Currently Online Runners",
      "id": 201,
      "gridPos": { "h": 8, "w": 6, "x": 0, "y": 1 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "label_replace((count(container_last_seen{job=\"cadvisor\",container_label_com_docker_compose_service=\"woodpecker-runner\"} > (time() - 300)) > 0) or vector(0), \"runner\", \"Woodpecker Runner\", \"\", \"\")",
          "refId": "A",
          "format": "table"
        },
        {
          "expr": "label_replace((count(container_last_seen{job=\"cadvisor\",container_label_com_docker_compose_service=\"forgejo-actions-runner\"} > (time() - 300)) > 0) or vector(0), \"runner\", \"Forgejo Actions Runner\", \"\", \"\")",
          "refId": "B",
          "format": "table"
        },
        {
          "expr": "label_replace((count(container_last_seen{job=\"cadvisor\",container_label_com_docker_compose_service=\"github-actions-runner\"} > (time() - 300)) > 0) or vector(0), \"runner\", \"GitHub Actions Runner\", \"\", \"\")",
          "refId": "C",
          "format": "table"
        }
{% if EXTERNAL_RUNNER_METRICS_IP %}
        ,
        {
          "expr": "label_replace((max(up{job=\"external-runner\"}) or vector(0)), \"runner\", \"External Runner\", \"\", \"\")",
          "refId": "D",
          "format": "table"
        }
{% endif %}
      ],
      "transformations": [
        {
          "id": "merge",
          "options": {}
        },
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time": true,
              "__name__": true,
              "job": true,
              "instance": true
            },
            "indexByName": {
              "runner": 0,
              "Value": 1
            },
            "renameByName": {
              "runner": "Runner",
              "Value": "Status"
            }
          }
        },
        {
          "id": "filterFieldsByName",
          "options": {
            "include": {
              "names": ["Runner", "Status"]
            }
          }
        },
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "align": "left",
            "displayMode": "color-background"
          },
          "mappings": [
            {
              "type": "value",
              "options": {
                "0": { "text": "Offline", "color": "#d66060" },
                "1": { "text": "Online", "color": "#5fb3b3" }
              }
            }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "value": null, "color": "#a5a5a5" },
              { "value": 0, "color": "#d66060" },
              { "value": 1, "color": "#5fb3b3" }
            ]
          }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Runner" },
            "properties": [
              {
                "id": "custom.width",
                "value": 180
              },
              {
                "id": "mappings",
                "value": []
              },
              {
                "id": "thresholds",
                "value": {
                  "mode": "absolute",
                  "steps": [
                    { "value": null, "color": "transparent" }
                  ]
                }
              }
            ]
          }
        ]
      },
      "options": {
        "showHeader": true,
        "sortBy": []
      }
    },
    {
      "type": "stat",
      "title": "Woodpecker Runner",
      "id": 202,
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 1 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },

      "targets": [
        {
          "expr": "((count(container_last_seen{job=\"cadvisor\",container_label_com_docker_compose_service=\"woodpecker-runner\"} > (time() - 300)) > 0) or vector(0)) * (1 + ((sum(rate(container_cpu_usage_seconds_total{job=\"cadvisor\",container_label_com_docker_compose_service=\"woodpecker-runner\"}[2m])) or vector(0)) >= bool 0.1))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            {
              "type": "value",
              "options": {
                "0": { "text": "Offline", "color": "#d66060" },
                "1": { "text": "Idle", "color": "#e7c787" },
                "2": { "text": "Active", "color": "#5fb3b3" }
              }
            },
            {
              "type": "special",
              "options": {
                "match": "null",
                "result": { "text": "No data", "color": "#a5a5a5" }
              }
            }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "value": null, "color": "#a5a5a5" },
              { "value": 0, "color": "#d66060" },
              { "value": 1, "color": "#e7c787" },
              { "value": 2, "color": "#5fb3b3" }
            ]
          }
        }
      },
      "options": {
        "orientation": "horizontal",
        "textMode": "value",
        "colorMode": "background"
      }
    },
    {
      "type": "stat",
      "title": "Forgejo Actions Runner",
      "id": 203,
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 1 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },

      "targets": [
        {
          "expr": "((count(container_last_seen{job=\"cadvisor\",container_label_com_docker_compose_service=\"forgejo-actions-runner\"} > (time() - 300)) > 0) or vector(0)) * (1 + ((sum(rate(container_cpu_usage_seconds_total{job=\"cadvisor\",container_label_com_docker_compose_service=\"forgejo-actions-runner\"}[2m])) or vector(0)) >= bool 0.1))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
