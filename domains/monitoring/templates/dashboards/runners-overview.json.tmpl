              { "value": 1, "color": "#e7c787" },
              { "value": 2, "color": "#5fb3b3" }
            ]
          }
        }
      },
      "options": {
        "orientation": "horizontal",
        "textMode": "value",
        "colorMode": "background"
      }
    },
{% if EXTERNAL_RUNNER_METRICS_IP %}
    {
      "type": "stat",
      "title": "External Runner",
      "id": 2051,
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 5 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "(max(up{job=\"external-runner\"}) or vector(0)) * (1 + ((sum(rate(node_cpu_seconds_total{job=\"external-runner\",mode!=\"idle\"}[2m])) or vector(0)) >= bool 0.1))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            {
              "type": "value",
              "options": {
                "0": { "text": "Offline", "color": "#d66060" },
                "1": { "text": "Idle", "color": "#e7c787" },
                "2": { "text": "Active", "color": "#5fb3b3" }
              }
            },
            {
              "type": "special",
              "options": {
                "match": "null",
                "result": { "text": "No data", "color": "#a5a5a5" }
              }
            }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "value": null, "color": "#a5a5a5" },
              { "value": 0, "color": "#d66060" },
              { "value": 1, "color": "#e7c787" },
              { "value": 2, "color": "#5fb3b3" }
            ]
          }
        }
      },
      "options": {
        "orientation": "horizontal",
        "textMode": "value",
        "colorMode": "background"
      }
    },
{% endif %}
    {
      "type": "row",
      "title": "CPU Usage",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": {% if EXTERNAL_RUNNER_METRICS_IP %}13{% else %}9{% endif %} }
    },
    {
      "type": "timeseries",
      "title": "Runner CPU Usage (cores)",
      "id": 205,
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": {% if EXTERNAL_RUNNER_METRICS_IP %}14{% else %}10{% endif %} },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "sum(rate(container_cpu_usage_seconds_total{job=\"cadvisor\",container_label_com_docker_compose_service=\"woodpecker-runner\"}[5m]))",
          "refId": "A",
          "legendFormat": "Woodpecker Runner"
        },
        {
          "expr": "sum(rate(container_cpu_usage_seconds_total{job=\"cadvisor\",container_label_com_docker_compose_service=\"forgejo-actions-runner\"}[5m]))",
          "refId": "B",
          "legendFormat": "Forgejo Actions Runner"
        },
        {
          "expr": "sum(rate(container_cpu_usage_seconds_total{job=\"cadvisor\",container_label_com_docker_compose_service=\"github-actions-runner\"}[5m]))",
          "refId": "C",
          "legendFormat": "GitHub Actions Runner"
        }
{% if EXTERNAL_RUNNER_METRICS_IP %}
        ,
        {
          "expr": "sum(rate(node_cpu_seconds_total{job=\"external-runner\",mode!=\"idle\"}[5m]))",
          "refId": "D",
          "legendFormat": "External Runner"
        }
{% endif %}
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "cores",
          "color": { "mode": "palette-classic" }
        }
      },
      "options": {
        "legend": { "displayMode": "table", "placement": "bottom" },
        "tooltip": { "mode": "multi" }
      }
    },
    {
      "type": "timeseries",
      "title": "Runner CPU Usage (%)",
      "id": 206,
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": {% if EXTERNAL_RUNNER_METRICS_IP %}14{% else %}10{% endif %} },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "100 * sum(rate(container_cpu_usage_seconds_total{job=\"cadvisor\",container_label_com_docker_compose_service=~\"woodpecker-runner|forgejo-actions-runner|github-actions-runner\"}[5m]))",
          "refId": "A",
          "legendFormat": "{% raw %}{{container_label_com_docker_compose_service}}{% endraw %}"
        }
{% if EXTERNAL_RUNNER_METRICS_IP %}
        ,
        {
          "expr": "100 - (avg by (instance) (rate(node_cpu_seconds_total{job=\"external-runner\",mode=\"idle\"}[5m])) * 100)",
          "refId": "B",
          "legendFormat": "External Runner"
        }
{% endif %}
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "color": { "mode": "palette-classic" }
        }
      },
      "options": {
        "legend": { "displayMode": "table", "placement": "bottom" },
        "tooltip": { "mode": "multi" }
      }
    },
    {
      "type": "row",
      "title": "Memory Usage",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": {% if EXTERNAL_RUNNER_METRICS_IP %}22{% else %}18{% endif %} }
    },
    {
      "type": "timeseries",
      "title": "Runner Memory Usage",
      "id": 207,
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": {% if EXTERNAL_RUNNER_METRICS_IP %}23{% else %}19{% endif %} },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "container_memory_usage_bytes{job=\"cadvisor\",container_label_com_docker_compose_service=~\"woodpecker-runner|forgejo-actions-runner|github-actions-runner\"}",
          "refId": "A",
          "legendFormat": "{% raw %}{{container_label_com_docker_compose_service}}{% endraw %}"
        }
{% if EXTERNAL_RUNNER_METRICS_IP %}
        ,
        {
          "expr": "node_memory_MemTotal_bytes{job=\"external-runner\"} - node_memory_MemAvailable_bytes{job=\"external-runner\"}",
          "refId": "B",
          "legendFormat": "External Runner"
        }
{% endif %}
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "color": { "mode": "palette-classic" }
        }
      },
      "options": {
        "legend": { "displayMode": "table", "placement": "bottom" },
        "tooltip": { "mode": "multi" }
      }
    },
    {
      "type": "timeseries",
      "title": "Runner Memory Usage (%)",
      "id": 208,
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": {% if EXTERNAL_RUNNER_METRICS_IP %}23{% else %}19{% endif %} },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "100 * (container_memory_usage_bytes{job=\"cadvisor\",container_label_com_docker_compose_service=~\"woodpecker-runner|forgejo-actions-runner|github-actions-runner\"} / container_spec_memory_limit_bytes{job=\"cadvisor\",container_label_com_docker_compose_service=~\"woodpecker-runner|forgejo-actions-runner|github-actions-runner\"})",
          "refId": "A",
          "legendFormat": "{% raw %}{{container_label_com_docker_compose_service}}{% endraw %}"
        }
{% if EXTERNAL_RUNNER_METRICS_IP %}
        ,
        {
          "expr": "100 * (1 - (node_memory_MemAvailable_bytes{job=\"external-runner\"} / node_memory_MemTotal_bytes{job=\"external-runner\"}))",
          "refId": "B",
          "legendFormat": "External Runner"
        }
{% endif %}
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "color": { "mode": "palette-classic" }
        }
      },
      "options": {
        "legend": { "displayMode": "table", "placement": "bottom" },
        "tooltip": { "mode": "multi" }
      }
    },
    {
      "type": "row",
      "title": "Network",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": {% if EXTERNAL_RUNNER_METRICS_IP %}31{% else %}27{% endif %} }
    },
    {
      "type": "timeseries",
      "title": "Runner Network Traffic",
      "id": 209,
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": {% if EXTERNAL_RUNNER_METRICS_IP %}32{% else %}28{% endif %} },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "rate(container_network_receive_bytes_total{job=\"cadvisor\",container_label_com_docker_compose_service=~\"woodpecker-runner|forgejo-actions-runner|github-actions-runner\"}[5m])",
          "refId": "A",
          "legendFormat": "{% raw %}{{container_label_com_docker_compose_service}}{% endraw %} RX"
        },
        {
          "expr": "rate(container_network_transmit_bytes_total{job=\"cadvisor\",container_label_com_docker_compose_service=~\"woodpecker-runner|forgejo-actions-runner|github-actions-runner\"}[5m])",
          "refId": "B",
          "legendFormat": "{% raw %}{{container_label_com_docker_compose_service}}{% endraw %} TX"
        }
{% if EXTERNAL_RUNNER_METRICS_IP %}
        ,
        {
          "expr": "rate(node_network_receive_bytes_total{job=\"external-runner\",device!=\"lo\"}[5m])",
          "refId": "C",
          "legendFormat": "External Runner RX"
        },
        {
          "expr": "rate(node_network_transmit_bytes_total{job=\"external-runner\",device!=\"lo\"}[5m])",
          "refId": "D",
          "legendFormat": "External Runner TX"
        }
{% endif %}
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "color": { "mode": "palette-classic" }
        }
      },
      "options": {
        "legend": { "displayMode": "table", "placement": "bottom" },
        "tooltip": { "mode": "multi" }
      }
