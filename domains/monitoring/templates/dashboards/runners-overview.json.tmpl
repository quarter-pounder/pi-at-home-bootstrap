    },

    {
      "type": "stat",
      "title": "GitHub Actions Runner",
      "id": 204,
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 1 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },

      "targets": [
        {
          "expr": "((count(container_last_seen{job=\"cadvisor\",container_label_com_docker_compose_service=\"github-actions-runner\"} > (time() - 300)) > 0) or vector(0)) * (1 + ((sum(rate(container_cpu_usage_seconds_total{job=\"cadvisor\",container_label_com_docker_compose_service=\"github-actions-runner\"}[2m])) or vector(0)) >= bool 0.1))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [
