{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": {"type": "grafana", "uid": "grafana"},
        "enable": true,
        "hide": true,
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "editable": true,
  "graphTooltip": 0,
  "panels": [
    {
      "type": "row",
      "title": "System Utilisation",
      "gridPos": {"h": 1, "w": 24, "x": 0, "y": 0}
    },
    {
      "type": "timeseries",
      "title": "CPU Utilisation (%)",
      "id": 1,
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 1},
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "targets": [
        {
          "expr": "100 - avg by (instance) (sum by (instance, cpu) (rate(node_cpu_seconds_total{job=\"node-exporter\",mode=\"idle\"}[5m]))) * 100",
          "refId": "A",
          "legendFormat": "CPU"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "decimals": 1,
          "color": {"mode": "palette-classic"},
          "thresholds": {"mode": "absolute", "steps": [{"color": "#444"}, {"color": "#99b4a4", "value": 60}, {"color": "#d17f7f", "value": 85}]}
        },
        "overrides": []
      },
      "options": {
        "legend": {"displayMode": "hidden"},
        "tooltip": {"mode": "multi"}
      }
    },
    {
      "type": "timeseries",
      "title": "Memory Usage (%)",
      "id": 2,
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 1},
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "targets": [
        {
          "expr": "(1 - avg by (instance) (node_memory_MemAvailable_bytes{job=\"node-exporter\"} / node_memory_MemTotal_bytes{job=\"node-exporter\"})) * 100",
          "refId": "A",
          "legendFormat": "Memory"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "decimals": 1,
          "color": {"mode": "continuous-GrYlRd"},
          "thresholds": {"mode": "absolute", "steps": [{"color": "#444"}, {"color": "#c2b280", "value": 70}, {"color": "#b25b5b", "value": 85}]}
        },
        "overrides": []
      },
      "options": {
        "legend": {"displayMode": "hidden"},
        "tooltip": {"mode": "multi"}
      }
    },
    {
      "type": "row",
      "title": "Thermals & Power",
      "gridPos": {"h": 1, "w": 24, "x": 0, "y": 9}
    },
    {
      "type": "gauge",
      "title": "CPU Temperature (Â°C)",
      "id": 3,
      "gridPos": {"h": 8, "w": 6, "x": 0, "y": 10},
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "targets": [{"expr": "pi_cpu_temperature_celsius", "refId": "A"}],
      "fieldConfig": {
        "defaults": {
          "unit": "celsius",
          "min": 0,
          "max": 100,
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "#777", "value": null},
              {"color": "#a0b89c", "value": 60},
              {"color": "#d08080", "value": 80}
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "orientation": "vertical",
        "showThresholdLabels": false,
        "showThresholdMarkers": true,
        "reduceOptions": {"calcs": ["lastNotNull"]}
      }
    },
    {
      "type": "timeseries",
      "title": "Core Voltage (V)",
      "id": 4,
      "gridPos": {"h": 8, "w": 6, "x": 6, "y": 10},
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "targets": [{"expr": "pi_core_voltage_volts", "refId": "A"}],
      "fieldConfig": {
        "defaults": {
          "unit": "volt",
          "decimals": 2,
          "thresholds": {"mode": "absolute", "steps": [{"color": "#888"}, {"color": "#b0b080", "value": 4.8}, {"color": "#d08080", "value": 4.7}]}
        },
        "overrides": []
      },
      "options": {
        "legend": {"displayMode": "hidden"},
        "tooltip": {"mode": "single"}
      }
    },
    {
      "type": "stat",
      "title": "Throttling Flags (Now)",
      "id": 5,
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 10},
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "targets": [
        {
          "expr": "pi_throttled_flag{condition=~\"undervoltage_now|frequency_capped_now|throttled_now|soft_temp_limit_now\"}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "mappings": [
            {
              "type": "value",
              "options": {
                "0": {"text": "OK", "color": "#8fc78f"},
                "1": {"text": "Active", "color": "#c27777"}
              }
            }
          ]
        },
        "overrides": []
      },
      "options": {"textMode": "value", "orientation": "horizontal", "reduceOptions": {"calcs": ["lastNotNull"]}}
    },
    {
      "type": "row",
      "title": "Storage",
      "gridPos": {"h": 1, "w": 24, "x": 0, "y": 18}
    },
    {
      "type": "timeseries",
      "title": "Filesystem Usage (bytes)",
      "id": 6,
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 19},
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "targets": [
        {
          "expr": "sum by (mountpoint) (node_filesystem_size_bytes{job=\"node-exporter\",fstype!~\"tmpfs|overlay\"} - node_filesystem_free_bytes{job=\"node-exporter\",fstype!~\"tmpfs|overlay\"})",
          "refId": "A",
          "legendFormat": "{{ '{{mountpoint}}' }}"
        }
      ],
      "fieldConfig": {"defaults": {"unit": "bytes"}, "overrides": []},
      "options": {"legend": {"displayMode": "table", "placement": "bottom"}, "tooltip": {"mode": "multi"}}
    }
  ],
  "refresh": "30s",
  "schemaVersion": 39,
  "style": "dark",
  "tags": ["pi-forge"],
  "time": {"from": "now-6h", "to": "now"},
  "title": "Pi System Overview (Refined)",
  "uid": "pi-system-overview-v2",
  "version": 2
}
