{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": {"type": "grafana", "uid": "grafana"},
        "enable": true,
        "hide": true,
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "editable": true,
  "graphTooltip": 0,
  "panels": [
    {
      "type": "row",
      "title": "System Utilisation",
      "id": 10,
      "gridPos": {"h": 1, "w": 24, "x": 0, "y": 0}
    },
    {
      "type": "timeseries",
      "title": "CPU Utilisation (%)",
      "id": 1,
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 1},
      "targets": [
        {
          "expr": "100 - (avg by (instance) (sum by (instance, cpu) (rate(node_cpu_seconds_total{job=\"node-exporter\",mode=\"idle\"}[5m])))) * 100",
          "legendFormat": "{% raw %}{{instance}}{% endraw %}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "decimals": 1
        },
        "overrides": []
      },
      "options": {
        "legend": {"displayMode": "table", "placement": "bottom"},
        "tooltip": {"mode": "multi"}
      }
    },
    {
      "type": "timeseries",
      "title": "Memory Usage (%)",
      "id": 2,
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 1},
      "targets": [
        {
          "expr": "(1 - avg by (instance) (node_memory_MemAvailable_bytes{job=\"node-exporter\"} / node_memory_MemTotal_bytes{job=\"node-exporter\"})) * 100",
          "legendFormat": "{% raw %}{{instance}}{% endraw %}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "decimals": 1
        },
        "overrides": []
      },
      "options": {
        "legend": {"displayMode": "table", "placement": "bottom"},
        "tooltip": {"mode": "multi"}
      }
    },
    {
      "type": "row",
      "title": "Thermals",
      "id": 11,
      "gridPos": {"h": 1, "w": 24, "x": 0, "y": 9}
    },
    {
      "type": "gauge",
      "title": "CPU Temperature (Â°C)",
      "id": 3,
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "gridPos": {"h": 8, "w": 6, "x": 0, "y": 10},
      "targets": [
        {
          "expr": "pi_cpu_temperature_celsius",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "celsius",
          "mappings": [
            {
              "type": "special",
              "options": {
                "match": "nan",
                "result": {"text": "Unknown", "color": "#c1c7cd"}
              }
            }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "#7eb26d", "value": null},
              {"color": "#eab839", "value": 60},
              {"color": "#d44a3a", "value": 80}
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": {"calcs": ["lastNotNull"], "values": false},
        "orientation": "vertical"
      }
    },
    {
      "type": "text",
      "title": "Kernel Limitation",
      "id": 7,
      "gridPos": {"h": 8, "w": 18, "x": 6, "y": 10},
      "options": {
        "mode": "markdown",
        "content": "Voltage and throttling metrics are hidden because the current Ubuntu kernel (`6.17.0-1003-raspi`) omits the bcm2835_vcio mailbox driver. The Pi health exporter emits `NaN`, so Grafana shows no data until that driver returns. Switch to a `linux-raspi` kernel or Raspberry Pi OS to re-enable those panels."
      }
    },
    {
      "type": "row",
      "title": "Storage",
      "id": 12,
      "gridPos": {"h": 1, "w": 24, "x": 0, "y": 18}
    },
    {
      "type": "timeseries",
      "title": "Filesystem Usage (bytes)",
      "id": 6,
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 19},
      "targets": [
        {
          "expr": "sum by (mountpoint) (node_filesystem_size_bytes{job=\"node-exporter\",fstype!~\"tmpfs|overlay\"} - node_filesystem_free_bytes{job=\"node-exporter\",fstype!~\"tmpfs|overlay\"})",
          "legendFormat": "{% raw %}{{mountpoint}}{% endraw %}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes"
        },
        "overrides": []
      },
      "options": {
        "legend": {"displayMode": "table", "placement": "bottom"},
        "tooltip": {"mode": "multi"}
      }
    }
  ],
  "refresh": "30s",
  "schemaVersion": 39,
  "style": "dark",
  "tags": ["pi-forge"],
  "time": {"from": "now-6h", "to": "now"},
  "title": "Pi System Overview",
  "uid": "pi-system-overview",
