global:
  scrape_interval: 15s
  evaluation_interval: 15s
  external_labels:
    monitor: 'forgejo-pi-monitor'

rule_files:
  - '/etc/prometheus/alerts.yml'

alerting:
  alertmanagers:
    - static_configs:
        - targets:
            - alertmanager:9093

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']

  - job_name: 'node-exporter'
    static_configs:
      - targets: ['node-exporter:9100']

  - job_name: 'cadvisor'
    static_configs:
      - targets: ['cadvisor:8080']

  - job_name: 'forgejo'
    scheme: http
    metrics_path: '/metrics'
    bearer_token: "{{ FORGEJO_METRICS_TOKEN }}"
    static_configs:
      - targets:
          - 'forgejo:3000'

  - job_name: 'woodpecker'
    scheme: http
    metrics_path: '/metrics'
    static_configs:
      - targets:
          - 'woodpecker:{{ PORT_WOODPECKER_METRICS }}'

  - job_name: 'loki'
    scheme: http
    metrics_path: '/metrics'
    static_configs:
      - targets:
          - 'loki:3100'

  - job_name: 'pihole'
    scheme: http
    metrics_path: '/metrics'
    static_configs:
      - targets:
          - 'adblocker-pihole-exporter:9617'
{% if EXTERNAL_RUNNER_METRICS_IP %}
{% set runner_target = EXTERNAL_RUNNER_METRICS_IP.replace("http://", "").replace("https://", "") %}
{% set runner_target = runner_target if ":" in runner_target else runner_target + ":9100" %}
  - job_name: 'external-runner'
    scheme: http
    metrics_path: '/metrics'
    scrape_interval: 30s
    static_configs:
      - targets:
          - '{{ runner_target }}'
        labels:
          instance: 'external-runner'
          runner_type: 'external'
{% endif %}
