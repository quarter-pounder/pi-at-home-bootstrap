// ---------- FILE MATCHERS ----------------------------------------------------

local.file_match "system_logs" {
  path_targets = [
    { __path__ = "/var/log/syslog" },
    { __path__ = "/var/log/auth.log" },
    { __path__ = "/var/log/kern.log" }
  ]
}

local.file_match "forgejo_logs" {
  path_targets = [
    { __path__ = "/srv/forgejo/log/forgejo.log" },
    { __path__ = "/srv/forgejo/log/hooks.log" },
    { __path__ = "/srv/forgejo/log/http.log" }
  ]
}

local.file_match "docker_logs" {
  path_targets = [
    { __path__ = "/var/lib/docker/containers/*/*.log" }
  ]
}

// ---------- DISCOVERY --------------------------------------------------------

discovery.docker "containers" {
  host = "unix:///var/run/docker.sock"
}

// ---------- SOURCE: SYSTEM ---------------------------------------------------

loki.source.file "system" {
  targets    = local.file_match.system_logs.targets
  forward_to = [loki.process.system.receiver]
}

// ---------- SOURCE: FORGEJO --------------------------------------------------

loki.source.file "forgejo" {
  targets    = local.file_match.forgejo_logs.targets
  forward_to = [loki.process.forgejo.receiver]
}

// ---------- SOURCE: DOCKER FILES ---------------------------------------------

loki.source.file "docker_file" {
  targets    = local.file_match.docker_logs.targets
  forward_to = [loki.process.docker.receiver]
}

// ---------- SOURCE: DOCKER API ----------------------------------------------

loki.source.docker "containers" {
  host       = "unix:///var/run/docker.sock"
  targets    = discovery.docker.containers.targets
  forward_to = [loki.process.docker.receiver]
}

// ---------- PIPELINE: SYSTEM -------------------------------------------------

loki.process "system" {
  forward_to = [loki.write.default.receiver]

  stage.regex {
    expression = "^(?P<timestamp>\\S+\\s+\\S+)\\s+(?P<hostname>\\S+)\\s+(?P<service>[^:]+):\\s+(?P<message>.*)$"
  }

  stage.timestamp {
    source = "timestamp"
    format = "Jan 02 15:04:05"
  }

  stage.labels {
    values = { job = "system", source = "syslog" }
  }
}

// ---------- PIPELINE: FORGEJO ------------------------------------------------

loki.process "forgejo" {
  forward_to = [loki.write.default.receiver]

  stage.json {
    expressions = { timestamp = "time", level = "severity", message = "message" }
  }

  stage.timestamp {
    source = "timestamp"
    format = "2006-01-02T15:04:05.000Z"
  }

  stage.labels {
    values = { job = "forgejo", service = "forgejo" }
  }
}

// ---------- PIPELINE: DOCKER -------------------------------------------------

loki.process "docker" {
  forward_to = [loki.write.default.receiver]

  stage.json {
    expressions = {
      timestamp = "time",
      message   = "log",
      level     = "level",
      container = "attrs.name",
      service   = "attrs.labels.\"com.docker.compose.service\"",
      stack     = "attrs.labels.\"com.docker.compose.project\""
    }
  }

  stage.timestamp {
    source = "timestamp"
    format = "2006-01-02T15:04:05.000000000Z"
  }

  stage.labels {
    values = { job = "docker" }
  }

  // fallback if Docker log lacks labels entirely
  stage.static_labels {
    values = { service = "unknown" }
  }
}

// ---------- LOKI WRITER ------------------------------------------------------

loki.write "default" {
  endpoint {
    url = "http://monitoring-loki:3100/loki/api/v1/push"
  }
}

// ---------- PROMETHEUS SCRAPING OF ALLOY ------------------------------------

prometheus.exporter.self "alloy" {}

prometheus.scrape "alloy" {
  targets         = prometheus.exporter.self.alloy.targets
  scrape_interval = "30s"
  forward_to      = [prometheus.remote_write.default.receiver]
}

// ---------- PROMETHEUS REMOTE WRITE -----------------------------------------

prometheus.remote_write "default" {
  endpoint {
    url = "http://monitoring-prometheus:9090/api/v1/write"
  }
}
