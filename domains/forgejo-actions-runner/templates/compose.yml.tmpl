services:
  forgejo-actions-runner:
    image: {{ FORGEJO_ACTIONS_RUNNER_IMAGE }}
    container_name: forgejo-actions-runner
    restart: unless-stopped
    entrypoint: ["/bin/sh", "-c"]
    command:
      - |
        if [ ! -f /data/.runner ]; then
          echo "Creating runner file with instance: {{ FORGEJO_EXTERNAL_URL }}"
          /bin/forgejo-runner create-runner-file \
            --instance {{ FORGEJO_EXTERNAL_URL }} \
            --secret {{ FORGEJO_ACTIONS_RUNNER_TOKEN }} \
            --output /data/.runner
        fi
        echo "Starting runner daemon..."
        exec /bin/forgejo-runner daemon
    environment: {}
    working_dir: /data
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock
      - /srv/forgejo-actions-runner:/data
    networks:
      forgejo-network:
        aliases:
          - forgejo-actions-runner

networks:
  forgejo-network:
    external: true
    name: forgejo-network

